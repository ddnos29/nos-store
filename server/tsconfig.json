{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/**/*.ts"],
    "exclude": ["node_modules"],
    "files": ["./src/types/express/index.d.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
